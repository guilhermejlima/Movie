<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view_poster_detail_fragment"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_height="180dp"
        android:contentDescription="@string/backdrop_image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_image_placeholder"
        tools:ignore="MissingConstraints,VectorDrawableCompat"/>

        <ImageView
        android:id="@+id/image_view_cover_fragment"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text_view_title_detail_fragment"
        app:layout_constraintBottom_toTopOf="@id/image_view_poster_detail_fragment"
            />

            <TextView
                android:id="@+id/text_view_title_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_view_poster_detail_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                />


            <TextView
                android:id="@+id/text_view_release_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_title_detail_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="ddd"/>

            <TextView
                android:id="@+id/text_view_genre_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/text_view_release_detail_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="ddd"/>



    <ProgressBar
        android:id="@+id/progress_bar_detail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>